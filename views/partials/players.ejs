<!-- views/partials/players.ejs -->

<div class="uk-panel uk-panel-box uk-panel-box-secondary">
	<h2>Current Players</h2>
        <table class="uk-table uk-table-condensed uk-text-small">
			<% 
				var cells = 0;

				for (i = 0; i < onUsers.length; i++) {
					if (cells === 0) {
						%><tr><td class='uk-width-1-3'><i class="uk-icon-user"></i> <%= onUsers[i].local.username %></td><%
						cells += 1;
					} else if (cells > 0 && cells < 3) {
						%><td class='uk-width-1-3'><i class="uk-icon-user"></i> <%= onUsers[i].local.username %></td><%
					} else {
						%></tr><%
					}
				}
			
			%>
        </table>
</div>
