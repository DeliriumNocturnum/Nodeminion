<!-- views/pages/signup.ejs -->

<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body>
<div class="uk-container uk-container-center uk-margin-large-bottom">
    <header>
		<% include ../partials/header %>
    </header>
	
	<main>
	<div class="uk-grid uk-margin-top">
		<div class="uk-width-medium-1-5"></div>
		<div class="uk-width-medium-3-5">
			<div class="uk-grid uk-panel uk-panel-box uk-panel-box-secondary">
				<div class="uk-width-1-2">
					<div class="uk-panel">
						<h3 class="uk-panel-title"><i class="uk-icon-rocket"></i> User Signup</h3>
						<% if (message.length > 0) { %>
							<div class="uk-alert uk-alert-danger"><%= message %></div>
						<% } %>
						<form class="uk-form uk-form-stacked" action="/signup" method="post">
							<div class="uk-form-row">
								<label class="uk-form-label">Username</label>
								<div class="uk-form-controls">
									<input type="text" name="username">
								</div>
							</div>
							<div class="uk-form-row">
								<label class="uk-form-label">Password</label>
								<div class="uk-form-controls">
									<input type="password" name="password">
								</div>
							</div>
							<div class="uk-form-row">
								<button type="submit" class="uk-button">Signup</button>
							</div>
						</form>
						
						<hr>
						
						<p>Already have an account? <a href="/login">Login</a></p>
						<p>Or go <a href="/">home</a>.</p>
					</div>
				</div>
				<div class="uk-width-1-2">
					<div class="uk-panel">
					
					</div>
				</div>
			</div>
		</div>
		<div class="uk-width-medium-1-5"></div>
	</div>
	</main>
</div>
</body>
</html>